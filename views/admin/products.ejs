<body>
    <main id="main-admin-products">
        <h1 class="admin-products-title">Listagem da Biblioteca</h1>
        <a href="/admin/produtos/cadastro">
            <button class="btn-edit-forms mt-5">Cadastrar novo livro</button>
        </a>
        <div id="admin-products-list">
            <% if(products.length>0){ %>
                <table class="table-admin-products">
                    <thead>
                        <tr>
                            <th>Titulo</th>
                            <th>Autor</th>
                            <th>Descricao</th>
                            <th>Valor</th>
                    </thead>
                    <tbody>
                        <!-- Trazendo os produtos cadastrados -->
                        <% for(let product of products){ %>
                            <tr>
                                <td>
                                    <%= product.Titulo %>
                                </td>
                                <td>
                                    <%= product.Autor %>
                                </td>
                                <td>
                                    <%= product.Descricao %>
                                </td>
                                <td>
                                    <%= product.Valor %>
                                </td>
                                <% if(product.active){ %>
                                    <td>Ativo</td>
                                    <% }else{ %>
                                        <td>Inativo</td>
                                        <% } %>
                                            <td class="admin-products-actions">
                                                <a href="/admin/produtos/<%= product.id %>">Visualizar</a>
                                                <a href="/admin/produtos/editar/<%= product.id %>">Editar</a>
                                                <a href="/admin/produtos/deletar/<%= product.id %>">Excluir</a>
                                            </td>
                            </tr>
                            <% } %>
                    </tbody>
                </table>
                <% }else{ %>
                    <h2>Nenhum livro encontrado.</h2>
                    <% } %>

        </div>
    </main>
</body>